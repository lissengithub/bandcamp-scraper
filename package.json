{
  "name": "bandcamp-scraper",
  "version": "1.5.0",
  "description": "A scraper for https://bandcamp.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "prepublishOnly": "npm run build",
    "example:album": "ts-node examples/getAlbumInfo.ts",
    "example:search": "ts-node examples/search.ts",
    "example:merch": "ts-node examples/merch-example.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/masterT/bandcamp-scraper"
  },
  "author": "Simon Thibout√¥t <salut@simonthiboutot.com> (http://simonthiboutot.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/masterT/bandcamp-scraper/issues"
  },
  "homepage": "https://github.com/masterT/bandcamp-scraper",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "standard": "^16.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "ajv": "^4.11.8",
    "cheerio": "^0.22.0",
    "json5": "^0.5.1",
    "linez": "^4.1.4",
    "scrape-it": "^3.3.2",
    "tinyreq": "^3.2.5"
  },
  "directories": {
    "example": "examples"
  },
  "keywords": [
    "scraper",
    "api",
    "bandcamp",
    "music",
    "resources",
    "album",
    "song",
    "product",
    "fan"
  ]
}
